  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: pynsource",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/src",
      "program": "pynsource-gui.py",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: pynsource PRO",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/src",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/../ogl2:${workspaceFolder}/../pynsource-rego"
      },
      "program": "pynsource-gui.py",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
